
<h1>BLOG</h1>

<strong>New Create</strong>
<%= form_with model: @blog do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit "投稿する" %>
<% end %>

<h2>履歴</h2>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  </thead>
  
   <tbody>
     <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.body %></td>
    
    <td><%= link_to "編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to "詳細を見る", blog_path(blog.id) %></td>
  </tr>
  <% end %>
 </tbody>
</table>

